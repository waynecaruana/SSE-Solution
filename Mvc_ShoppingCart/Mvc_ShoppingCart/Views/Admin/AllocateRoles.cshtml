@model Mvc_ShoppingCart.Models.RoleModel

@{
    ViewBag.Title = "AllocateRoles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>AllocateRoles</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>RoleModel</legend>

        <br/><br/>

        <div class="editor-field">
            @Html.LabelFor(model => model.Roles)
            @Html.DropDownListFor(model => model.SelectedRole, Model.Roles, "Please Select")

        </div>

         <div class="editor-field">
            @Html.LabelFor(model => model.Users)
            @Html.DropDownListFor(model => model.SelectedUser, Model.Users, "Please Select")

        </div>

        <div class="editor-field">
            @Html.Label("Allocate")
            @Html.RadioButtonFor(model => model.SelectedOption , "Allocate")

            @Html.Label("Deallocate")
            @Html.RadioButtonFor(model => model.SelectedOption, "Deallocate")
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
